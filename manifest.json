{
  "manifest_version": 3,
  "name": "Style Guide Generator",
  "version": "1.0.0",
  "description": "Analyzes websites and generates style guides",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-script.js"]
  }]
}